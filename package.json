{
  "name": "clipboard-app",
  "version": "2.0.0",
  "description": "大玄开发的一款基于mac的复制粘贴app",
  "main": "main.cjs",
  "productName": "剪贴板助手",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:vite": "vite build",
    "build": "npm run remove && npm run build:vite && electron-builder",
    "build:dmg": "npm run remove && npm run build:vite && electron-builder",
    "build:exe": "npm run remove && npm run build:vite && electron-builder --win --x64 --rcedit=false",
    "remove": "rm -rf dist dist_electron",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "NODE_ENV=development electron ."
  },
  "build": {
    "appId": "com.lidaxuan.clipboardapp",
    "productName": "ClipboardApp",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "main.cjs",
      "preload.js",
      "icon.png",
      "icon.ico"
    ],
    "mac": {
      "icon": "icon.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/electron-store/**",
      "node_modules/conf/**",
      "node_modules/dot-prop/**"
    ]
  },
  "keywords": [],
  "type": "module",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "sass": "^1.93.2",
    "vite": "^7.1.6",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^9.0.0"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "vue": "^3.5.21"
  }
}
